<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="20dp"
    tools:context="com.example.guru.totohealth.SecondActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignLeft="@+id/scrollView1"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Who is the founder of beyond Zero "
                android:textAppearance="?android:attr/textAppearanceMedium" />




            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView" >

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/radioButton3"
                    android:layout_below="@+id/radioButton3"
                    android:checked="false"
                    android:text="Magret Kenyatta" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/textView16"
                    android:layout_below="@+id/textView12"
                    android:checked="false"
                    android:text="Diana Rose" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/textView16"
                    android:layout_below="@+id/textView12"
                    android:checked="false"
                    android:text="Nicky Minaj" />

            </RadioGroup>
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioButton3"
                android:layout_marginTop="10dp"
                android:text="How many children die from preventable diseases this year"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView" >

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView15"
                    android:layout_alignBottom="@+id/textView15"
                    android:layout_alignLeft="@+id/radioButton7"
                    android:checked="false"
                    android:text="50,000" />

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/radioButton5"
                    android:layout_alignRight="@+id/radioButton4"
                    android:layout_below="@+id/textView15"
                    android:checked="false"
                    android:text="5,000,000" />
                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/radioButton5"
                    android:layout_alignRight="@+id/radioButton4"
                    android:layout_below="@+id/textView15"
                    android:checked="false"
                    android:text="7,000,000" />
            </RadioGroup>



            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="10dp"
                android:text="How many counties in Kenya benefits from Beyond Zero free mobile clinics "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView" >

                <RadioButton
                    android:id="@+id/radioButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView16"
                    android:layout_alignBottom="@+id/textView16"
                    android:layout_alignLeft="@+id/radioButton8"
                    android:layout_alignStart="@+id/radioButton3"
                    android:checked="false"
                    android:text="10" />

                <RadioButton
                    android:id="@+id/radioButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioButton7"
                    android:layout_toEndOf="@+id/textView11"
                    android:layout_toRightOf="@+id/textView11"
                    android:checked="false"
                    android:text="20" />

                <RadioButton
                    android:id="@+id/radioButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/radioButton8"
                    android:layout_alignStart="@+id/radioButton8"
                    android:layout_below="@+id/radioButton8"
                    android:checked="false"
                    android:text="47" />


            </RadioGroup>

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButton10"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView15"
                android:layout_toRightOf="@+id/textView15"
                android:text="FINISH"
                android:background="#DDB343"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
